{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,
    "lib": ["dom", "es6", "scripthost"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": ["typePatches"]
}